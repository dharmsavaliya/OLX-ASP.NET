<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<header class="header">
    <div class="header-top">
        <!-- Logo -->
        <div class="logo">
            <a href="/" class="logo-link">
                <i class="fas fa-store"></i>
                <span class="brand-name">OLX</span>
            </a>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" placeholder="Find Cars, Mobile Phones and more..." class="search-input" />
            <button class="search-button">
                <i class="fas fa-search"></i>
            </button>
        </div>

        <!-- User Actions -->
        <div class="actions">
            <a href="@Url.Action("Wishlist", "Account")" class="icon-btn"><i class="fas fa-heart"></i></a>
            <a href="@Url.Action("Messages", "Account")" class="icon-btn"><i class="fas fa-envelope"></i></a>
            <a href="@Url.Action("Sell", "Home")" class="sell-btn">Sell</a>

            @if (Context.Session.GetString("FullName") != null)
            {
                <a href="@Url.Action("Profile", "Account")" class="text-btn">Profile</a>
                <a href="@Url.Action("Logout", "Account")" class="text-btn">Logout</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="text-btn">Login / Register</a>
            }
        </div>
    </div>
</header>
