            </a>

            <!-- Wishlist Icon -->
            <i class="fas fa-heart text-danger" style="font-size: 24px;"></i>

            <!-- Profile Icon -->
            <i class="fas fa-user-circle text-dark" onclick="profileClick()" style="cursor: pointer; font-size: 32px;"></i>
        </div>
    </div>
</header>

