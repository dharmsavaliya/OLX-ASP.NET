@{

    <link rel="stylesheet" href="~/css/Product.css" asp-append-version="true" />
    ViewData["Title"] = "Product Listing";
    var selectedCategory = ViewBag.SelectedCategory ?? "ALL CATEGORIES";
    var categories = new List<string>
    {
        "ALL CATEGORIES", "Cars", "Motorcycles", "Mobile Phones", "For Sale: Houses & Apartments",
        "Scooters", "Commercial & Other Vehicles", "For Rent: Houses & Apartments"
    };

    // Sample Hardcoded Products
    var products = new List<dynamic>
    {
        new { Id = 1, Name = "Honda City 2020", Price = "₹12,00,000", Image = "https://via.placeholder.com/200?text=Honda+City", Category = "Cars" },
        new { Id = 2, Name = "Samsung Galaxy S22", Price = "₹80,000", Image = "https://via.placeholder.com/200?text=Samsung+Galaxy", Category = "Mobile Phones" },
        new { Id = 3, Name = "Yamaha R15", Price = "₹1,50,000", Image = "https://via.placeholder.com/200?text=Yamaha+R15", Category = "Motorcycles" },
        new { Id = 4, Name = "For Rent: Luxury Villa", Price = "₹1,00,000/month", Image = "https://via.placeholder.com/200?text=Luxury+Villa", Category = "For Rent: Houses & Apartments" },
        new { Id = 5, Name = "Scooty Pep+", Price = "₹50,000", Image = "https://via.placeholder.com/200?text=Scooty+Pep", Category = "Scooters" },
        new { Id = 6, Name = "Sony Bravia TV", Price = "₹70,000", Image = "https://via.placeholder.com/200?text=Sony+Bravia+TV", Category = "Electronics" }
    };

    var filteredProducts = selectedCategory == "ALL CATEGORIES"
        ? products
        : products.Where(p => p.Category == selectedCategory).ToList();
}

<div class="product-listing-container">
    <!-- Navigation Bar -->
    <nav class="nav-bar">
        <ul>
            @foreach (var category in categories)
            {
                <li class="@(selectedCategory == category ? "active" : "")">
                    <a href="?category=@category">@category</a>
                </li>
            }
        </ul>
    </nav>

    <!-- Products Section -->
    <div class="section">
        <h2>@selectedCategory</h2>
        <div class="product-grid">
            @foreach (var product in filteredProducts)
            {
                <div class="product-card">
                    <img src="@product.Image" alt="@product.Name" class="product-image" />
                    <h4 class="product-name">@product.Name</h4>
                    <p class="product-price">@product.Price</p>
                </div>
            }
        </div>
    </div>
</div>
